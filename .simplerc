
# Prompt: [user@host:path]$
export PS1='[\u@\h:\w]\$ '

# Alias
alias ll='ls -alt'
alias grep='grep --color=auto'
alias ..='cd ..'
alias duh='du -h -1'
alias c='clear'

# Git
aloas gs='git status'
alias gc='git commit -m'
alias gca='git commit --amend'
